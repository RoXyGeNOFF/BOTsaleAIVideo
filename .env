# Telegram Bot
BOT_TOKEN=your_telegram_bot_token
# Токен Telegram-бота, полученный у @BotFather

# Veo3 (Google Gemini API)
VEO3_API_KEY=your_gemini_api_key
# Ключ доступа к Gemini API (Veo 3) для генерации видео

# ЮKassa (YooKassa)
YOOKASSA_SHOP_ID=your_yookassa_shop_id
# Shop ID вашего магазина в YooKassa

YOOKASSA_API_KEY=your_yookassa_api_key
# Секретный API-ключ YooKassa

DOMAIN=https://yourdomain.com
# Домен, на который будет возвращаться пользователь после оплаты через YooKassa (используется в параметре return_url)

# YooMoney (кошелёк для P2P)
YOOMONEY_WALLET=your_yoomoney_wallet_number
# Номер кошелька YooMoney для приёма P2P-платежей

# Обязательная подписка на канал
CHANNEL_USERNAME=@your_channel_username
# Username или id Telegram-канала, на который пользователь должен быть подписан для доступа к боту